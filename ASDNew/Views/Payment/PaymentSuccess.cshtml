<body>
    <div class="divider">
        <h3>Payment Success</h3>
    </div>
    <div class="divider">
        @foreach (var item in Model.Reverse().Take(1))
        {
            <p>
                Your order has been successfully paid for at @Html.DisplayFor(modelItem => item.Date) and will be delivered to your address at
                @Html.DisplayFor(modelItem => item.BillingStreetNum) @Html.DisplayFor(modelItem => item.BillingStreet), @Html.DisplayFor(modelItem => item.BillingSuburb), @Html.DisplayFor(modelItem => item.BillingState).
            </p>
            <p>Your payment ID is @Html.DisplayFor(modelItem => item.Id) and a copy of the receipt will be sent to your email address at 
        @Html.DisplayFor(modelItem => item.BillingEmail).
       </p>
            <p>Click <a onclick="location.href='@Url.Action("PaymentHistory","Payment")'">here</a> to view your payment history.</p>
        }
    </div>

