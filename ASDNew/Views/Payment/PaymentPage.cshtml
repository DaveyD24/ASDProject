@model ASDNew.Models.Payment

<style>
    .row {
        display: -ms-flexbox;
        display: flex;
        -ms-flex-wrap: wrap;
        flex-wrap: wrap;
        margin: 0 -16px;
    }

    hr {
        color: black;
        background-color: black;
    }

    .ccontainer {
        background-color: #f2f2f2;
        padding: 5px 20px 15px 20px;
        border: 1px solid lightgrey;
        border-radius: 3px;
    }

    .divider {
        border-bottom: 2px solid black;
        margin-bottom: 10px;
    }

    .col-25 {
        -ms-flex: 25%; /* IE10 */
        flex: 25%;
    }

    .col-50 {
        -ms-flex: 50%; /* IE10 */
        flex: 50%;
    }

    .col-75 {
        -ms-flex: 75%; /* IE10 */
        flex: 75%;
    }

    .col-25,
    .col-50,
    .col-75 {
        padding: 0 16px;
    }

    label {
        margin-right: 10px;
        display: block;
    }

    input, select {
        width: 100%;
        margin-right: 10px;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 3px;
    }

    .btn {
        background-color: #04AA6D;
        color: white;
        padding: 12px;
        margin: 10px 0;
        border: none;
        width: 100%;
        border-radius: 3px;
        cursor: pointer;
        font-size: 17px;
    }

    span.price {
        float: right;
        color: grey;
    }
</style>



<!DOCTYPE html>

<html>

<head>
    <title>Add Product to Restaurant</title>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>

<body>

    <h2>Payment</h2>
    <div class="row">
        <div class="col-75">
            <div class="ccontainer">
                @using (Html.BeginForm("PaymentSuccess", "Payment", FormMethod.Post))
                {
                    <div class="row">
                        <div class="col-50">
                            <h3>Billing Address</h3>
                            <div>
                                <label for="name">Name</label>
                                @Html.TextBoxFor(m => m.BillingName)
                                @Html.ValidationMessageFor(m => m.BillingName)
                            </div>
                            <div>
                                <label for="email">Email</label>
                                @Html.TextBoxFor(m => m.BillingEmail)
                                @Html.ValidationMessageFor(m => m.BillingEmail)
                            </div>
                            <div>
                                <label>Street Number</label>
                                @Html.TextBoxFor(m => m.BillingStreetNum)
                                @Html.ValidationMessageFor(m => m.BillingStreetNum)
                            </div>
                            <div>
                                <label>Street Name</label>
                                @Html.TextBoxFor(m => m.BillingStreet)
                                @Html.ValidationMessageFor(m => m.BillingStreet)
                            </div>
                            <div>
                                <label>Suburb</label>
                                @Html.TextBoxFor(m => m.BillingSuburb)
                                @Html.ValidationMessageFor(m => m.BillingSuburb)

                            </div>

                            <div class="row">
                                <div class="col-50">
                                    <label>State</label>
                                    @Html.TextBoxFor(m => m.BillingState)
                                    @Html.ValidationMessageFor(m => m.BillingState)

                                </div>
                                <div class="col-50">
                                    <div>
                                        <label>Postcode</label>
                                        @Html.TextBoxFor(m => m.BillingPostCode)
                                        @Html.ValidationMessageFor(m => m.BillingPostCode)

                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-50">
                            <h3>Card Details</h3>
                            <div>
                                <label>Name on Card</label>
                                @Html.TextBoxFor(m => m.CreditCardName)
                                @Html.ValidationMessageFor(m => m.CreditCardName)

                            </div>
                            <div>
                                <label>Card Number</label>
                                @Html.TextBoxFor(m => m.CreditCardNumber)
                                @Html.ValidationMessageFor(m => m.CreditCardNumber)

                            </div>
                            <div>
                                <label>Exp. Date</label>
                                @Html.TextBoxFor(m => m.CreditCardExpiry)
                                @Html.ValidationMessageFor(m => m.CreditCardExpiry)
                            </div>
                            <div>
                                <label>CVV</label>
                                @Html.TextBoxFor(m => m.CVV)
                                @Html.ValidationMessageFor(m => m.CVV)

                            </div>
                            <input type="submit" value="Finalise Payment" class="btn" />
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="col-25">
            <div class="ccontainer">
                @* RECEIVE DATA FROM CART (cart/order objects) *@
                <div class="divider">
                    <h4>Order Summary</h4>
                </div>
                <div class="divider">
                    <p><a href="#">Product 1</a> <span class="price">$10</span></p>
                    <p><a href="#">Product 2</a> <span class="price">$13</span></p>
                    <p><a href="#">Product 3</a> <span class="price">$12</span></p>
                </div>
                <p>Total <span class="price">$35</span></p>
            </div>
        </div>
    </div>



