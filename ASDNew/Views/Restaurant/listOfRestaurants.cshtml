@model IEnumerable<ASDNew.Models.Restaurant>

<style>
    th  {
        text-align: middle;
    }
    th, td {
        padding: 15px;
        border-bottom: 1px solid #ddd;
    }
</style>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div>
        <h3>List of Restaurants</h3>
        <img src="~/Images/RestaurantBanners/test.png" alt="Banner" />
        <table>
            <thead>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            </thead>
            <tbody>
                @foreach (var restaurant in Model)
                {
                <tr>
                    <td style="width:25%">
                        @Html.ActionLink(restaurant.Name ,"Index", "Product", new { RestaurantID = restaurant.Id }, null)
                    </td>
                    <td>
                        @restaurant.Description
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
