@model ASDNew.Models.Restaurant
@using ASDNew.Models;

@{
    Restaurant restaurant = (Restaurant)ViewData["Restaurant"];

    ViewBag.Title = "Edit Restaurant";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div>
        <h1>Edit Restaurant</h1>
        @using (Html.BeginForm("Edit", "Restaurant", FormMethod.Post, new { @class = "form-horizontal" }))
        {

            <input type="hidden" name="RestaurantId" id="RestaurantId" value="@restaurant.Id">

            <div>
                <label for="RestaurantName">Name</label>
                @Html.TextBoxFor(m => m.Name)
                @Html.ValidationMessageFor(m => m.Name)
            </div>
            <div>
                <label for="RestaurantDescription">Description</label>
                @Html.TextBoxFor(m => m.Description)
                @Html.ValidationMessageFor(m => m.Description)
            </div>
            <div>
                <label for="RestaurantEmail">Email</label>
                @Html.TextBoxFor(m => m.Email)
                @Html.ValidationMessageFor(m => m.Email)
            </div>
            <div>
                <label for="Password">Password</label>
                @Html.TextBoxFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password)
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-ok"></span> Submit</button>
                </div>
            </div>
        }
        <button type="submit" onclick="location.href='@Url.Action("Index")'" class="btn btn-primary"><span class="glyphicon glyphicon-ok"></span> Cancel</button>
    </div>
</body>
</html>
