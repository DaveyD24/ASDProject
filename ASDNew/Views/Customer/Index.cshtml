@model IEnumerable<ASDNew.Models.Customer>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div>
        <table>
            <thead>
            <th>
                ID
            </th>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Email
            </th>
            <th>
                Password
            </th>
            </thead>
            <tbody>
                @foreach (var customer in Model)
                {
                    <tr>
                        <td>
                            @customer.Id
                        </td>
                        <td>
                            @customer.FirstName
                        </td>
                        <td>
                            @customer.LastName
                        </td>
                        <td>
                            @customer.Email
                        </td>
                        <td>
                            @customer.Password
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
