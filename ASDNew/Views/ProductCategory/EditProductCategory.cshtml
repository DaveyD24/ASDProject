@model ASDNew.Models.ProductCategory
@{
    ViewBag.Title = "Edit Product Category";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div class="container">
        <h1>Edit Product Category</h1>

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade in">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <b>Error:</b> @TempData["ErrorMessage"]
            </div>
        }

        <div class="well well-sm col-sm-10">
            @using (Html.BeginForm("Edit", "ProductCategory", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                <input type="hidden" name="CategoryId" id="CategoryId" value="@Model.Id">

                <div class="form-group">
                    <label class="control-label col-sm-2">Current Name</label>
                    <div class="col-sm-10">
                        <p class="form-control-static"><b>@Model.Name</b></p>
                    </div>
                </div>

                <div class="form-group">
                    <label for="CategoryName" class="control-label col-sm-2">New Name</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="CategoryName" id="CategoryName" placeholder="Category Name" value="@Model.Name" required>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-ok"></span> Submit</button>
                        <button type="button" onclick="location.href='@Url.Action("Index", "ProductCategory")'" class="btn btn-default"><span class="glyphicon glyphicon-remove"></span> Cancel</button>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>
