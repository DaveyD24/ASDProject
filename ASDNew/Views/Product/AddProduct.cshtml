@model IEnumerable<ASDNew.Models.ProductCategory>
@using ASDNew.Models;
@{
    Restaurant restaurant = (Restaurant)ViewData["Restaurant"];
    List<ProductCategory> categories = (List<ProductCategory>)ViewData["AllCategories"];
}

<!DOCTYPE html>

<html>
<head>
    <title>Add Product to Restaurant</title>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="container">
        <h1>Add a New Product</h1>
        @using (Html.BeginForm("Create", "Product", FormMethod.Post))
        {
        <input type="hidden" name="restaurantId" id="restaurantId" value="@restaurant.Id">

        <div class="form-group">
            <label for="prodName" class="control-label col-sm-2">Product Name</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="prodName" id="prodName" required>
            </div>
        </div>

        <div class="form-group">
            <label for="prodCategory" class="control-label col-sm-2">Category</label>
            <div class="col-sm-10">
                <select id="prodCategory" name="prodCategory" class="form-control">
                    @foreach (var category in Model)
                        {
                    <option name="@category.Name" value=@category.Id>@category.Name</option>
                        }
                </select>
            </div>
        </div>

        <div class="form-group">
            <label for="prodPrice" class="control-label col-sm-2">Price $</label>
            <div class="col-sm-10">
                <input type="number" name="prodPrice" id="prodPrice" min="0" step="0.01" required class="form-control">
            </div>
        </div>

        <div class="form-group">
            <label for="prodDesc" class="control-label col-sm-2">Description (Optional)</label>
            <div class="col-sm-10">
                <textarea name="prodDesc" id="prodDesc" rows="4" class="form-control"></textarea>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-ok"></span> Submit</button>
                <button type="button" onclick="location.href='@Url.Action("Index", "Product", new {RestaurantID = restaurant.Id }, null)'" class="btn btn-default"><span class="glyphicon glyphicon-remove"></span> Cancel</button>
            </div>
        </div>
        }
    </div>
</body>
</html>
