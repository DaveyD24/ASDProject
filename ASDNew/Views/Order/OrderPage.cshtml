@model IEnumerable<ASDNew.Models.Order>


<style>
    .row {
        display: -ms-flexbox;
        display: flex;
        -ms-flex-wrap: wrap;
        flex-wrap: wrap;
        margin: 0 -16px;
    }

    hr {
        color: black;
        background-color: black;
    }

    .ccontainer {
        background-color: #f2f2f2;
        padding: 5px 20px 15px 20px;
        border: 1px solid lightgrey;
        border-radius: 3px;
    }

    .divider {
        border-bottom: 2px solid black;
        margin-bottom: 10px;
    }

    .col-30 {
        -ms-flex: 30%; /* IE10 */
        flex: 30%;
    }

    .col-50 {
        -ms-flex: 50%; /* IE10 */
        flex: 50%;
    }

    .col-40 {
        -ms-flex: 40%; /* IE10 */
        flex: 40%;
    }

    .col-70 {
        -ms-flex: 70%; /* IE10 */
        flex: 70%;
    }

    .col-30,
    .col-40,
    .col-50,
    .col-70 {
        padding: 0 16px;
    }

    label {
        margin-right: 10px;
        margin-bottom: 10px;
        display: block;
    }

    input {
        width: 100%;
        margin-right: 10px;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 3px;
    }

    .btn {
        background-color: #04AA6D;
        color: white;
        padding: 12px;
        margin: 10px 0;
        border: none;
        width: 100%;
        border-radius: 3px;
        cursor: pointer;
        font-size: 17px;
    }

    span.price {
        float: right;
        color: grey;
    }
</style>

<!DOCTYPE html>

<html>
<head>
    <title>Add Product to Restaurant</title>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>

<body>

    <div class="row">
        <div class="col-70">
            <div class="divider">
                <h3>Bag</h3>
            </div>
            @* FORMAT FOR ITEMS (40,30,30) *@
            <div class="row">
                <div class="col-40">
                    <a style="color: black; font-size: 16px;" href="#">Chicken Burger</a>
                    <p>Extras:</p>
                </div>
                <div class="col-30">
                    <label style="font-weight: normal;" for="quantity">Quantity</label>
                    <select name="quantity" id="quantity">
                        <option 1>1</option>
                        <option 2>2</option>
                        <option 3>3</option>
                        <option 4>4</option>
                        <option 5>5</option>
                    </select>
                    @* CODE BUTTON TO REMOVE ITEMS *@
                    <button onclick="">Remove</button>
                </div>
                <div class="col-30">
                    <span class="price">$5</span>
                </div>
            </div>
        </div>
        <div class="col-30">
            <div class="divider">
                <h3>Summary</h3>
            </div>
            <div class="divider">
                <p>Subtotal <span class="price">$20</span></p>
                <p>Delivery & Service <span class="price">$5</span></p>
            </div>
            <div class="divider">
                <p>Total <span class="price">$25</span></p>
            </div>
            <button class="btn" onclick="location.href='@Url.Action("PaymentPage","Payment")'">Continue to Checkout</button>
        </div>
    </div>

